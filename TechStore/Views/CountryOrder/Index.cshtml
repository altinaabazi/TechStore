@model IEnumerable<TechStore.Models.CountryOrder>

@{
      Layout = "_AdminLayout";
    ViewData["Title"] = "Country";
}

<h2>Country</h2>

<a asp-action="Create" class="btn btn-primary my-2">Add New Country</a>

@if (Model?.Count() > 0)
{
    <table class="table table-striped my-2">
        <thead>
            <tr>
                <th>Country</th
               
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Model)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@country.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-success btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-danger btn-sm" onclick="return window.confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>No countrys available</h3>
}
