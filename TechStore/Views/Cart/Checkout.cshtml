@using TechStore.Models.DTOs
@model CheckoutModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>
<form asp-action="Checkout">
    <div class="py-2">
        <label asp-for="Name">Name*</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Email">Email*</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="example@gmail.com" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="MobileNumber">Mobile Number*</label>
        <input type="text" class="form-control" asp-for="MobileNumber"
               pattern="^\+383[0-9]{8,9}$"
               title="Please enter a valid mobile number starting with +383 followed by 8 or 9 digits" />
        <span asp-validation-for="MobileNumber" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="CountryOrderId">Country*</label>
        <select asp-for="CountryOrderId" class="form-control">
            <option value="">Select Country</option>
            @foreach (var country in ViewBag.Countries as List<TechStore.Models.CountryOrder>)
            {
                <option value="@country.Id">@country.Name</option>
            }
        </select>
        <span asp-validation-for="CountryOrderId" class="text-danger"></span>
    </div>

    <div class="py-2">
        <label asp-for="Address">Address*</label>
        <textarea class="form-control" asp-for="Address" rows="5"> </textarea>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="py-2">
        <span class="mr-2">COD*</span>
        <select asp-for="PaymentMethod" class="form-control">
            <option value="">Select Payment Method</option>
            @foreach (var method in Enum.GetValues(typeof(TechStore.Constants.PaymentMethods)))
            {
                <option value="@method.ToString()">@method.ToString()</option>
            }
        </select>
        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
    </div>

    <div class="py-2">
        <button type="submit" class="btn btn-info">Next</button>
    </div>
</form>
