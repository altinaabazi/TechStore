@using TechStore.Models.DTOs
﻿
@model ProductDTO
@{
    Layout = "_AdminLayout";
}
<div style="width:50%">
    <h2> Add Product </h2>
    <a asp-action="Index" asp-controller="Product" class="btn btn-primary">Back</a>
    <form asp-action="AddProduct" enctype="multipart/form-data">
        @* <input type="hidden" asp-for="Id" /> *@

        <div class="my-2">
            <label>Product*</label>
            <input type="text" class="form-control" asp-for="ProductName" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        

        <div class="my-2">
            <label>Brand*</label>
            <select class="form-control" asp-for="BrandId" asp-items="Model.BrandList">
                <option value="">Select Brand</option>
            </select>
            <span asp-validation-for="BrandId" class="text-danger"></span>
        </div>
        <div class="my-2">
            <label>Category*</label>
            <select class="form-control" asp-for="CategoryId" asp-items="Model.CategoryList">
                <option value="">Select Category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="my-2">
            <label>Price*</label>
            <input type="number" class="form-control" asp-for="Price" min="0" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>


        <div class="my-2">
            <label>Image</label>
            <input type="file" class="form-control" asp-for="ImageFile" />
        </div>

        <div class="my-2">
            <button type="submit" class="btn btn-info">Add</button>
        </div>
    </form>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
