@model Product

<h2>Product Details</h2>

<div>
    <h4>@Model.ProductName</h4>
    <p><strong>Brand:</strong> @(!string.IsNullOrWhiteSpace(Model.Brand?.Name) ? Model.Brand.Name : "No Brand")</p>
    <p><strong>Category:</strong> @(!string.IsNullOrWhiteSpace(Model.Category?.Name) ? Model.Category.Name : "Uncategorized")</p>
    <p><strong>Price:</strong> $@Model.Price</p>
    @if (!string.IsNullOrWhiteSpace(Model.Image))
    {
        <img src="/images/@Model.Image" alt="@Model.ProductName" style="width:150px;height:200px;" />
    }
    else
    {
        <p>No image available</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
