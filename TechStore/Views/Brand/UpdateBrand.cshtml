@using TechStore.Models.DTOs
@model BrandDTO
@{

}
@* @Html.ValidationSummary() *@
<div style="width:50%">
    <h2> Update Brand </h2>
    <a asp-action="Index" asp-controller="Brand" class="btn btn-primary">Back</a>
    <form asp-action="UpdateBrand">
        <input type="hidden" asp-for="Id" />
        <div class="my-2">
            <label>Brand</label>
            <input type="text" class="form-control" asp-for="BrandName" />
            <span asp-validation-for="BrandName" class="text-danger"></span>
        </div>
        <div class="my-2">
            <button type="submit" class="btn btn-info">Update</button>
        </div>
    </form>
</div>