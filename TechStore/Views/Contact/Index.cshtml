@using TechStore.Constants
@model IEnumerable<TechStore.Models.ContactFormModel>

@{
    ViewData["Title"] = "Lista e Kontakteve";
}

<h2>@ViewData["Title"]</h2>


<table class="table">
    <thead>
        <tr>
            <th>Emri</th>
            <th>Email</th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
               
                <td>
                    <a asp-action="Details" asp-route-id="@contact.Id" class="btn btn-info btn-sm">Details</a>
  @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                   <a asp-action="Edit" asp-route-id="@contact.Id" class="btn btn-success btn-sm" >Edit</a>
                    <a asp-action="Delete" asp-route-id="@contact.Id" class="btn btn-danger btn-sm" >Delete</a>
}

                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Contact")" class="btn btn-success">Krijo Kontakt të Ri</a>
